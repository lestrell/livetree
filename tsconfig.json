{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "noImplicitAny": true,
	  "moduleResolution": "node",
	  "skipLibCheck": true,
      "sourceMap": true,
	  "outDir": "dist",
	  "rootDir": "src",
	  "suppressImplicitAnyIndexErrors": true,
	  "baseUrl": "./src",
      "paths": {
          "*": [
              "node_modules/*",
          ]
      }
  },
  "exclude": [
	"src/**/*.test.ts",
	"src/**/*.spec.ts"
  ],
  "include": [
	  "src/**/*",
  ]
}
