{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "noImplicitAny": true,
	  "moduleResolution": "node",
	  "skipLibCheck": false,
      "sourceMap": true,
      "outDir": ".",
	  "baseUrl": "./src",
	  "lib": [
		  "es6",
		  "dom"
	  ],
      "paths": {
          "*": [
              "node_modules/*",
              "src/types/*"
          ]
      }
  },
  "exclude": [
	"src/**/*.test.ts",
	"src/**/*.spec.ts"
  ],
  "include": [
      "src/**/*"
  ]
}
